using System;
					
public class Program
{
	string vowels_letters = "AaEeIiOoUuYy";
	string consonants_letters = "BbCcDdFfGgHhJjKkLlNnMmPpQqRrSsTtVvWwXxZz";
	
 public void Main()
        {
            Console.Write("Ведите любую букву английского алфавита: ");
            string ch = Console.ReadLine();
 
            char[] a = vowels_letters.ToCharArray();
	 		char[] b = consonants_letters.ToCharArray();
 
            if (ch.Length == 1)
            {
                for (int i = 0; i < vowels_letters.Length; i++)
                {
                    if (a[i].ToString() == ch)
                        Console.WriteLine("Это гласная буква");
                }
            }
          if (ch.Length == 1)
			{
				for (int c = 0; c < consonants_letters.Length; c++)
					{
                    if (b[c].ToString() == ch)
                Console.WriteLine("Это согласная буква");

       }
	  } } }
	
